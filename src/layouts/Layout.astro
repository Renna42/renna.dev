---
import { LOCALE, SITE, GRAY_MODE } from "@config";
import "@fontsource-variable/noto-sans-sc";
import "@fontsource-variable/noto-serif-sc";
import "@fontsource-variable/jetbrains-mono";
import "@fortawesome/fontawesome-free/css/all.css";
import "@styles/base.css";
import { ClientRouter } from "astro:transitions";
import { SEO } from "astro-seo";

export interface Props {
  title?: string;
  author?: string;
  description?: string;
  canonicalURL?: string;
  pubDatetime?: Date;
  modDatetime?: Date | null;
  scrollSmooth?: boolean;
  isPost?: boolean;
  postTags?: string[];
}

const {
  title = SITE.title,
  author = SITE.author,
  description = SITE.desc,
  canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
  scrollSmooth = false,
} = Astro.props;
---

<!doctype html>
<html
  lang=`${LOCALE.lang ?? "en"}`
  class={`${scrollSmooth && "scroll-smooth"} ${GRAY_MODE && "grayscale"}`}
>
  <head>
    <meta charset="UTF-8" />
    <SEO
      title={title}
      description={description}
      canonical={canonicalURL}
      twitter={{
        card: "summary_large_image",
        site: "@HMur233",
        creator: "@HMur233",
        title: title,
        imageAlt: title,
        description: description,
      }}
      extend={{
        link: [
          {
            rel: "icon",
            href: "/assets/avatar-circle.webp",
          },
          {
            rel: "sitemap",
            href: "/sitemap-index.xml",
          },
        ],
        meta: [
          {
            name: "author",
            content: author,
          },
        ],
      }}
    />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <meta name="theme-color" content="" />

    <ClientRouter />

    <script is:inline src="/toggle-theme.js"></script>

    <script is:inline type="text/javascript">
      (function(c,l,a,r,i,t,y){
          c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
          t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
          y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
      })(window, document, "clarity", "script", "pgb29yv1t0");
    </script>
  </head>
  <body>
    <slot />

    <!-- Cloudflare Web Analytics -->
    <script is:inline defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token":"00f3e74931ca4dfe8674e6beb7771c48"}'></script>
    <!-- End Cloudflare Web Analytics -->
  </body>
</html>
