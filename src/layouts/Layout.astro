---
import { LOCALE, SITE, GRAY_MODE } from "@config";
import "@styles/base.css";
import { ViewTransitions } from "astro:transitions";
import { SEO } from "astro-seo";

const googleSiteVerification = import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION;

export interface Props {
  title?: string;
  author?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
  pubDatetime?: Date;
  modDatetime?: Date | null;
  scrollSmooth?: boolean;
  isPost?: boolean;
  postTags?: string[];
}

const {
  title = SITE.title,
  author = SITE.author,
  description = SITE.desc,
  ogImage = SITE.ogImage,
  canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
  pubDatetime,
  modDatetime,
  scrollSmooth = false,
  isPost = false,
  postTags = [],
} = Astro.props;

const socialImageURL = new URL(
  ogImage ?? SITE.ogImage ?? "og.png",
  Astro.url.origin
).href;
---

<!doctype html>
<html
  lang=`${LOCALE.lang ?? "en"}`
  class={`${scrollSmooth && "scroll-smooth"}`}
  style={`${GRAY_MODE && "filter: grayscale(1)"}`}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={title}
      description={description}
      canonical={canonicalURL}
      charset="UTF-8"
      openGraph={{
        basic: {
          title: title,
          type: isPost ? "article" : "website",
          image: socialImageURL,
          url: canonicalURL,
        },
        optional: {
          locale: "zh_CN",
          siteName: title
        },
        article: isPost ? {
          publishedTime: pubDatetime && pubDatetime.toISOString(),
          modifiedTime: modDatetime ? modDatetime.toISOString() : undefined,
          authors: [author],
          tags: postTags,
        } : undefined
      }},
      twitter={{
        card: "summary_large_image",
        site: "@HMur233",
        creator: "@HMur233",
        title: title,
        image: socialImageURL,
        imageAlt: title,
        description: description
      }},
      extend={{
        link: [
          {
            rel: "icon",
            href: "/favicon.ico"
          },
          {
            rel: "sitemap",
            href: "/sitemap-index.xml"
          }
        ],
        meta: [
          {
            name: "author",
            content: author
          }
        ]
      }}
    />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-53YE76JBT2"></script>
    <script lang="text/javascript">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-53YE76JBT2');
    </script>

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,400;0,500;0,600;0,700;1,400;1,600&display=swap"
      rel="stylesheet"
    />

    <meta name="theme-color" content="" />

    {
      // If PUBLIC_GOOGLE_SITE_VERIFICATION is set in the environment variable,
      // include google-site-verification tag in the heading
      // Learn more: https://support.google.com/webmasters/answer/9008080#meta_tag_verification&zippy=%2Chtml-tag
      googleSiteVerification && (
        <meta
          name="google-site-verification"
          content={googleSiteVerification}
        />
      )
    }

    <ViewTransitions />

    <script is:inline src="/toggle-theme.js"></script>
  </head>
  <body>
    <slot />
    <!-- Cloudflare Web Analytics -->
    <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "9f927902e0c8496aa31d496112bd7c3c"}'></script>
    <!-- End Cloudflare Web Analytics -->
  </body>
</html>
